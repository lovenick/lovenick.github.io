body
	font-family 'Merriweather', serif
	font-size 16px
	line-height 1.6em
	color rgba(90,90,90,1.0)
	background-color rgba(250, 250, 250, 1.0)
	margin 0
	padding 10vh 4vh

h1
	font-size 2em
	color rgba(64,64,64,1.0)
	font-weight 800
	line-height 1.2em
	margin-top 0
	padding-top 0
	text-shadow 0px 1px 0px rgba(255, 255, 255, 1.0)

h2
	font-size 1.4em
	line-height 1.3em
	font-weight 300

p
	margin-bottom 2em

img
	width 100%
	padding 0
	margin 0
	
.article
	position relative
	display block
	max-width 900px
	margin 0 auto
	clear both
	
	.meta
		display block
		max-width 25%
		font-size 0.8em
		float left
		color rgba(166, 173, 173, 1.0)
		
		@media screen and (max-width:600px)
			display inline
			max-width 100%
			float initial
	
	.content
		display block
		max-width 70%
		float right
		margin-bottom 10vh
		
		@media screen and (max-width:600px)
			display inline-block
			float initial
			max-width 100%		

ul.nav
	display block
	font-size 0.8em
	color rgba(166, 173, 173, 1.0)
	position fixed
	bottom 0
	left 0
	margin 0
	padding 0
	height 30px
	line-height 30px
	border-top 1px solid rgba(230,230,230,1.0)
	background-color rgba(250, 250, 250, 1.0)
	width 100%
	list-style none
	
	li 
		float left
		margin-right 10px
		margin-left 10px
		padding 0
			
		a
			color rgba(166, 173, 173, 1.0)
			text-decoration none
		
		a:hover
			text-decoration underline
	
	@media screen and (max-width:900px)
		display none
			


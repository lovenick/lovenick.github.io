body
	font-family 'Merriweather', serif
	font-size 18px
	line-height 1.6em
	color rgba(90,90,90,1.0)
	margin 0
	padding 10vh 4vh

h1
	font-size 2em
	color rgba(64,64,64,1.0)
	font-weight 800
	line-height 1.2em
	margin-top 0
	padding-top 0

h2
	font-size 1.4em
	line-height 1.3em
	font-weight 300

p
	margin-bottom 2em
	
.article
	position relative
	display block
	max-width 900px
	margin 0 auto
	clear both
	
	.meta
		display block
		max-width 25%
		float left
		color rgba(166, 173, 173, 1.0)
		
		@media screen and (max-width:600px)
			display inline
			max-width 100%
			float initial
	
	.content
		display block
		max-width 70%
		float right
		margin-bottom 10vh
		
		@media screen and (max-width:600px)
			display inline-block
			float initial
			max-width 100%		


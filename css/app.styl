body
	font-family 'Raleway', sans-serif
	font-size 22px
	font-weight 400
	line-height 1.5em
	color rgba(90,90,90,1.0)
	background-color rgba(250, 250, 250, 1.0)
	margin 0
	padding 10vh 4vh
	font-smoothing antialiased
	-webkit-font-smoothing antialiased

h1
	font-size 3.25em
	color rgba(67, 67, 75, 1.0)
	font-weight 800
	line-height 1em
	margin 0
	padding 0 0 0.2em 0
	text-shadow 0px 1px 0px rgba(255, 255, 255, 1.0)
	
	a
		text-decoration none
		color rgba(67, 67, 75, 1.0)
		
	
h2
	font-size 1.75em
	line-height 1em
	font-weight 300
	margin 0
	padding 0 0 0.6em 0

h3
	font-size 1.4em
	margin 0
	padding 0

p
	margin-bottom 1.5em

img
	width 100%
	padding 0
	margin 0
	
.article
	position relative
	display block
	max-width 820px
	margin 0 auto 10em auto
	clear both
	
	.content
		// margin-bottom 3em
		
		.meta
			font-size 0.85em
			color rgba(166, 173, 173, 1.0)
		
		.title
			margin 0 0 3em 0
			text-align center
		
		.intro
			font-size 1.35em
			line-height 1.5em
		
		@media screen and (max-width:600px)
			display inline-block
			float initial
			max-width 100%

.footer
	text-align center
	color rgba(105, 96, 107, 1.0)

